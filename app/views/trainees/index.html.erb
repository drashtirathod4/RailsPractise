<h1 align="center">List of Trainees</h1>
<table align="center" cellpadding="15px" border="1px">
    <tr>
      <td><b>User Name</b></td>
      <td><b>Email</b></td>
      <td><b>Address</b></td>
      <td><b>City</b></td>
      <td><b>Gender</b></td>
      <td><b>Hobbies</b></td>
      <td><b>View</b></td>
      <td><b>Edit</b></td>
      <td><b>Remove</b></td>
    </tr>
    <% @trainees.each do |trainee| %>
    <tr>
      <td><b><%= trainee.name %></b></td>
      <td><%= trainee.email %></td>
      <td><%= trainee.address %></td>
      <td><%= trainee.city.name %></td>
      <td><%= trainee.gender %></td>
      <td><%= trainee.hobbies %></td>
      <td><%= button_to "View", trainee_path(trainee), method: :get %></td>
      <td><%= button_to "Edit", edit_trainee_path(trainee), method: :get %></td>
      <td><%= button_to 'Remove', trainee_path(trainee), method: 'delete' %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="10" align="center"><%= button_to "Add new Trainee", new_trainee_path, method: :get %></td>
  </tr>
</table>
