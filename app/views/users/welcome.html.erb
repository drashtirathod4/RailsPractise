<center>
    <%= button_to "Logout", logout_path, method: :delete %>
    <%if flash[:notice] %>
        <p style = "color:green"><%= notice %></p>
    <% end %>
    <h1>Welcome <%= @current_user.name %></h1><br>
    <b><%= button_to "Profile", profile_user_path(@current_user), method: :get %></b><br>

    <h1>List of all Articles</h1>
    <table cellpadding="15px" border="1px">
        <tr>
            <td><b>Article Name</b></td>
            <td><b>Author Name</b></td>
            <td><b>Published</b></td>
            <td><b>View</b></td>
            <td><b>Edit</b></td>
            <td><b>Remove</b></td>
        </tr>
        <% @articles.each do |article| %>
            <tr>
                <td><b><%= article.title %></b></td>
                <td><%= article.user.name %></td>
                <td><%= article.published %></td>
                <td><%= button_to "View", userarticle_path(article), method: :get %></td>
                <td><%= button_to "Edit", edit_userarticle_path(article), method: :get  if policy(article).update? %></td>
                <td><%= button_to 'Remove', userarticle_path(article), method: 'delete' if policy(article).destroy? %></td>
            </tr>
        <% end %>
    </table><br><br>
    <b><%= button_to "Add New Article", new_userarticle_path(@current_user), method: :get %></b><br>
</center>
