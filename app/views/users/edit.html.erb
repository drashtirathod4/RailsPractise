<center>
    <h1>Edit User Details</h1>

    <%if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p style = "color:red"><%= error %></p>
        <%end%>
    <%end%>

    <%= form_for @user do |f| %>
        <table cellpadding="15px">
            <tr>
                <td><%= f.label :name %></td>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <td><%= f.label :phone_Number %></td>
                <td><%= f.text_field :phone %></td>
            </tr>
            <tr>
                <td><%= f.label :Email %></td>
                <td><%= f.email_field :email %></td>
            </tr>
            <tr>
                <td><%= f.label :password %></td>
                <td><%= f.password_field :password %></td>
            </tr>
            <tr>
                <td><%= f.label :password_confirmation %></td>
                <td><%= f.password_field :password_confirmation %></td>
            </tr>
            <tr>
                <td><%= f.label :DOB %></td>
                <td><%= f.date_field :dob %></td>
            </tr>
            <tr>
                <td><%= f.label :course %></td>
                <td><%= f.text_field :course %> &nbsp; Python / ROR</td>
            </tr>
            <tr>
                <td><%= f.label :start_Date %></td>
                <td><%= f.date_field :start_date %></td>
            </tr>
            <tr>
                <td><%= f.label :end_Date %></td>
                <td><%= f.date_field :end_date %></td>
            </tr>
            <tr>
                <td><%= f.label :image %></td>
                <td><%= f.file_field :image %></td>
            </tr>
            <tr>
                <td colspan="2">
                    <%= f.check_box :agreement, {}, true, false %>
                    <%= f.label "I agree to the terms & conditions." %>
                </td>
            </tr>
            <tr>
                <td><%= f.submit %></td>
            </tr>
            <tr>
                <td><b><%= link_to "Back", users_path %></b></td>
            </tr>
        </table>
    <%end%>
</center>
