<center>
    <h1>Edit User Details</h1>

    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p style = "color:red"><%= error %></p>
        <% end %>
    <% end %>

    <%= form_for @user do |f| %>
        <table cellpadding="15px">
            <tr>
                <td><%= f.label :name %></td>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <td><%= f.label :phone_Number %></td>
                <td><%= f.text_field :phone %></td>
            </tr>
            <tr>
                <td><%= f.label :Email %></td>
                <td><%= f.email_field :email %></td>
            </tr>
            <tr>
                <td><%= f.label :DOB %></td>
                <td><%= f.date_field :dob %></td>
            </tr>
            <tr>
                <td><%= f.label :course %></td>
                <td><%= f.text_field :course %> &nbsp; Python / ROR</td>
            </tr>
            <tr>
                <td><%= f.label :start_Date %></td>
                <td><%= f.date_field :start_date %></td>
            </tr>
            <tr>
                <td><%= f.label :end_Date %></td>
                <td><%= f.date_field :end_date %></td>
            </tr>
            <tr>
                <td colspan="2">
                    <%= f.check_box :agreement, {}, true, false %>
                    <%= f.label "I agree to the terms & conditions." %>
                </td>
            </tr>
            <tr>
                <td><%= f.label :document %></td>
                <td><%= f.file_field :document, accept: "application/pdf" %>
                    <% if f.object.document.attached? %>
                        The currently attached file is <%= @user.document.filename %>. Click here to replace this file.
                    <% else %>
                        No Post has been uploaded yet. Please pick a post.
                    <% end %>
                </td>
            </tr>
            <tr>
                <td><%= f.label :post %></td>
                <td><%= f.file_field :post, multiple: true, accept: "image/png,image/gif,image/jpeg" %>
                    <%= f.hidden_field :post, value: f.object.post if f.object.post.attached? %>
                    <% if f.object.post.attached? %>
                        The currently attached file is 
                        <% (f.object.post).each do |file| %>
                            <%= file.filename %> 
                        <% end %>
                        . Click here to replace this file.
                    <% else %>
                        No Post has been uploaded yet. Please pick a post.
                    <% end %>
                </td>
            </tr>
            <tr>
                <td><%= f.submit %></td>
            </tr>
            <tr>
                <td><b><%= link_to "Back", users_path %></b></td>
            </tr>
        </table>
    <% end %>
</center>
