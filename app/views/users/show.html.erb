<center>
    <h1>User Details</h1>
    <h2><%= @user.name %></h2>
    <h4>Phone : <%= @user.phone %></h4>
    <h4>Email : <%= @user.email %></h4>
    <h4>Date of Birth : <%= @user.dob %></h4>
    <%= link_to "Back", users_path %></b>
    <br><br><br>

    <h2>Versions</h2>
    <table cellspacing = "20px">
    <thead>
        <tr>
        <th>ID</th>
        <th>Modifier</th>
        <th>Action</th>
        <th>Changes</th>
        </tr>
    </thead>
    <tbody>
        <% @user.versions.each do |version| %>
            <%= tag.tr do %>
                <%= tag.td version.id %>
                <%= tag.td version.whodunnit %>
                <%= tag.td link_to 'rollback', user_rollback_path(@user, version: version) %>
                <%= tag.td do %>
                    <%= tag.ul class: 'list-group' do %>
                        <li class='list-group-item'>
                            <strong>Name:</strong> 
                            <%= @user.paper_trail.previous_version.name %>
                        </li>
                        <li class='list-group-item'>
                            <strong>Email:</strong> 
                            <%= @user.paper_trail.previous_version.email %>
                        </li>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
    </table>
</center>
